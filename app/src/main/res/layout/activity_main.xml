<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB">

    <!-- Top guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="40dp" />

    <!-- Left guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <!-- Right guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <!-- TITLE -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phishing Detector"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintEnd_toEndOf="@id/rightGuideline"/>

    <!-- CONTENT TYPE LABEL -->
    <TextView
        android:id="@+id/textContentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content Type"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/leftGuideline" />

    <!-- TAB BUTTONS -->
    <LinearLayout
        android:id="@+id/tabRow"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textContentType"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintEnd_toEndOf="@id/rightGuideline">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tabURL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="URL"
            android:textColor="#FFFFFF"
            android:background="@drawable/tab_active"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tabEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="EMAIL"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tab_inactive"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tabSMS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SMS"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tab_inactive"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tabText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TEXT"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tab_inactive"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@null" />
    </LinearLayout>

    <!-- scan text -->
    <TextView
        android:id="@+id/scanTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content to Scan"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tabRow"
        app:layout_constraintStart_toStartOf="@id/leftGuideline" />
    <!-- INPUT TEXT -->

    <EditText
        android:id="@+id/inputText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Enter URL, email, SMS, or text..."
        android:textColor="#000000"
        android:gravity="top|start"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/scanTextLabel"
        app:layout_constraintBottom_toTopOf="@id/buttonRow"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintEnd_toEndOf="@id/rightGuideline"/>

    <!-- BOTTOM BUTTONS -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintEnd_toEndOf="@id/rightGuideline">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPaste"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Paste"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:background="@drawable/tab_inactive"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@null"
            android:layout_marginEnd="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Scan"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/tab_active"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@null"
            android:layout_marginStart="10dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
